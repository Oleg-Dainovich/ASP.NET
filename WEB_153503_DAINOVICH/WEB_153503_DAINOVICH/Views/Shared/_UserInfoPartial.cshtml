﻿@{
	var a = User.Identity;
	var isAuthenticated = a?.IsAuthenticated ?? false;
	var email = @User.Claims.FirstOrDefault(c => c.Type.Equals("Name", StringComparison.OrdinalIgnoreCase))?.Value;
	var username = @User.Claims.FirstOrDefault(c => c.Type.Equals("Name", StringComparison.OrdinalIgnoreCase))?.Value;
}

@if (isAuthenticated)
{
	@await Component.InvokeAsync("Cart")
	<div class="dropdown ms-4 nav-color">
		<button class="btn btn-secondary dropdown-toggle"
				type="button" id="dropdownMenuButton"
				data-bs-toggle="dropdown"
				aria-expanded="false">
			User@gmail.com
			<img src="https://localhost:7003/avatar" width="30" alt="avatar" class="rounded nav-color" />
		</button>
		<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
			<li>
				<span class="dropdown-item-text">
						<img src="https://localhost:7003/avatar"
						 width="50" alt="User" class="rounded" />
					user@gmail.com
				</span>
			</li>
			<li><hr class="dropdown-divider"></li>
			<li>
				<form id="logoutForm" asp-area="" asp-controller="Identity" asp-action="LogOut" class="form-inline">
					<button id="logout" type="submit" class="nav-link btn btn-link text-dark">
						Logout
					</button>
				</form>
			</li>
		</ul>
	</div>
}
else
{
	<div class="ms-auto navbar-text navbar-nav">
		<a id="login" class="nav-link btn btn-link text-white" asp-controller="identity" asp-action="Login">
			Login
		</a>
	</div>

}